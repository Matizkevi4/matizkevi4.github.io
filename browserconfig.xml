<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="img/favicon/mstile-image/mstile-70x70.png"/> <!--Маленькая плитка, ее размер 70х70 пикселей-->
      <square150x150logo src="img/favicon/mstile-image/mstile-150x150.png"/> <!--Средняя плитка, ее размер 150х150 пикселей, размер должен быть 270x270-->
      <square310x310logo src="img/favicon/mstile-image/mstile-310x310.png"/> <!--Широкая плитка, ее размер 310х150 пикселей-->
      <wide310x150logo src="img/favicon/mstile-image/mstile-310x150.png"/> <!--Большая плитка, ее размер 310х310 пикселей-->
      <TileColor>#e6e6e6</TileColor>
    </tile>
  </msapplication>
</browserconfig>